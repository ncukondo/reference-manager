{
  "permissions": {
    "allow": [
      "Bash(workmux:*)",
      "Bash(tmux capture-pane:*)",
      "Bash(tmux send-keys:*)",
      "Bash(tmux list-windows:*)",
      "Bash(tmux new-session:*)",
      "Bash(tmux has-session:*)",
      "Bash(which workmux)",
      "Bash(which tmux)",
      "Bash(sleep:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-vitest.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/validate-worktree-path.sh"
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/block-force-push.sh"
          }
        ]
      }
    ]
  }
}
