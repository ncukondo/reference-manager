{
  "name": "${localWorkspaceFolderBasename}",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "postCreateCommand": "sudo chown vscode:vscode /workspaces",
  "postStartCommand": "tmux has-session -t main 2>/dev/null || tmux new-session -d -s main -c /workspaces/reference-manager",
  "remoteUser": "vscode"
}