{
  "name": "@ncukondo/reference-manager",
  "version": "0.2.0",
  "description": "A local reference management tool using CSL-JSON as the single source of truth",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "ref": "./bin/reference-manager.js",
    "reference-manager": "./bin/reference-manager.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@citation-js/core": "^0.7.16",
    "@citation-js/plugin-bibtex": "^0.7.21",
    "@citation-js/plugin-csl": "^0.7.16",
    "@citation-js/plugin-doi": "^0.7.21",
    "@citation-js/plugin-ris": "^0.7.21",
    "@iarna/toml": "^2.2.5",
    "chokidar": "^5.0.0",
    "commander": "^12.1.0",
    "hono": "^4.11.1",
    "write-file-atomic": "^7.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^22.19.2",
    "@types/write-file-atomic": "^4.0.3",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-node": "^2.1.0",
    "vitest": "^2.1.0"
  },
  "keywords": [
    "reference-manager",
    "csl-json",
    "bibliography",
    "pandoc",
    "citation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ncukondo/reference-manager.git"
  }
}
